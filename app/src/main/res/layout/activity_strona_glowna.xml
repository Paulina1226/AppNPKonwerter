<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.npkonwerter.StronaGlowna">

    <Button
        android:id="@+id/bLukasiewicza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zamiana notacji nawiasowej na polską"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/bNawiasowa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zamiana notacji polskiej na nawiasową"
        android:layout_below="@+id/bLukasiewicza"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/bLogicznaNawiasowa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zamiana notacji polskiej na nawiasowa w logice"
        android:layout_below="@+id/bNawiasowa"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/bLogicznaLukasiewicza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zamiana notacji nawiasowej na polska w logice"
        android:layout_below="@+id/bLogicznaNawiasowa"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
